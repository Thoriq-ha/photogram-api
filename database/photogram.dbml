Project photogram{
    database_type: "MySQL"
    note: "User Post application, user can make posts and comments"
}
Table users {
    id int [pk, increment]
    name varchar
    email varchar
    password varchar
}

Table posts {
    id int [pk, increment]
    title varchar
    content text
    user_id int [ref: > users.id]
}

Table comments {
    id int [pk, increment]
    content text
    user_id int [ref: > users.id]
    post_id int [ref: > posts.id]
}

Table tags {
    id int [pk, increment]
    name varchar
}

Table post_tag {
    id int [pk, increment]
    post_id int [ref: > posts.id]
    tag_id int [ref: > tags.id]
}